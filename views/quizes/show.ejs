<form action="/quizes/<%=quiz.id%>/answer" method="get">
<p>Pregunta de <%=quiz.tema %>: <%=quiz.pregunta%></p>
<input type="text" name="respuesta" value=""/>
<input type="submit" value="Enviar"/><br/>
</form>

<p><a href="/quizes/<%= quiz.id %>/comments/new"><button>Nuevo comentario</button></a>  </p>

<p><strong>Comentarios</strong></p>
<% for(index in quiz.Comments) { %>
  <% if(quiz.Comments[index].publicado || session.user) { %>
      <p>- <%= quiz.Comments[index].texto %>
      <% if(!quiz.Comments[index].publicado && session.user) { %>
          <a href="/quizes/<%= quiz.id %>/comments/<%=quiz.Comments[index].id%>/publish" ><button type="button">Publicar</button></a>
      <% } %>
      </p>
  <% } %>

<%  }//fin de FOR %>
